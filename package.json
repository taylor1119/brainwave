{
	"name": "brainwave",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "bunx --bun astro dev",
		"build": "bunx --bun astro build",
		"preview": "bunx --bun astro preview",
		"check": "bunx --bun astro check",
		"format": "bunx --bun prettier --write --ignore-unknown --cache --cache-location=.prettiercache .",
		"lint": "bunx --bun eslint . --ext ts,tsx,astro --fix --cache --report-unused-disable-directives --max-warnings 0"
	},
	"dependencies": {
		"@astrojs/check": "0.9.3",
		"@astrojs/tailwind": "^5.1.0",
		"astro": "4.14.2",
		"astro-icon": "^1.1.1",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"nanostores": "^0.11.2",
		"tailwind-merge": "^2.5.2",
		"tailwindcss": "^3.4.10",
		"typescript": "^5.5.4"
	},
	"devDependencies": {
		"@types/bun": "^1.1.6",
		"@typescript-eslint/eslint-plugin": "^8.1.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-astro": "^1.2.3",
		"eslint-plugin-jsx-a11y": "^6.9.0",
		"prettier": "^3.3.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.6"
	}
