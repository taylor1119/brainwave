---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import gradient from '~/assets/imgs/gradient.png'
import loading from '~/assets/imgs/loading.png'
import service1 from '~/assets/imgs/service-1.png'
import service2 from '~/assets/imgs/service-2.png'
import service3 from '~/assets/imgs/service-3.png'
import Section from '../primitive/section.astro'
import Typography from '../primitive/typography.astro'

const SERVICE_NAMES = [
	'Photo generating',
	'Photo enhance',
	'Seamless Integration',
] as const

const SERVICE_ICON_NAMES = [
	'recording-3',
	'recording-1',
	'disc-2',
	'chrome-cast',
	'sliders-4',
] as const
---

<Section id='services' class='py-24 md:px-20'>
	<div class='space-y-4 pb-20 text-center'>
		<Typography component='h2'>Generative AI made for creators.</Typography>
		<Typography component='p2' class='text-slate-gray'
			>Brainwave unlocks the potential of AI-powered applications</Typography
		>
	</div>

	<div class='relative mx-auto max-w-7xl space-y-5'>
		<div
			class='relative flex h-[39rem] items-center overflow-hidden rounded-3xl border border-white/10 p-8 lg:p-20 xl:h-[46rem]'
		>
			<div class='absolute left-0 top-0 size-full md:w-3/5 xl:w-auto'>
				<Image
					src={service1}
					alt='Smartest AI'
					width={800}
					height={730}
					loading='lazy'
					class='size-full object-cover md:object-right'
				/>
			</div>

			<div class='ml-auto max-w-[17rem]'>
				<Typography component='h4' class='pb-4'>Smartest AI</Typography>
				<Typography component='p2' class='pb-12 text-slate-gray'>
					Brainwave unlocks the potential of AI-powered applications
				</Typography>
				<ul>
					{
						SERVICE_NAMES.map((item) => (
							<li class='flex items-start border-t border-deep-indigo py-4'>
								<Icon name='check-1' width={24} height={24} />
								<p class='pl-4'>{item}</p>
							</li>
						))
					}
				</ul>
			</div>

			<div
				class='absolute bottom-8 right-1/2 flex w-4/5 translate-x-1/2 items-center rounded-[1.7rem] border border-deep-indigo bg-ink-black/80 px-6 py-4 text-base md:w-[38rem]'
			>
				<Image
					src={loading}
					alt='Loading'
					loading='lazy'
					class='size-5'
				/>
				<p class='pl-4'>AI is generating</p>
			</div>
		</div>

		<div class='grid gap-5 lg:grid-cols-2'>
			<div
				class='relative min-h-[39rem] overflow-hidden rounded-3xl border border-white/10'
			>
				<div class='absolute inset-0'>
					<Image
						src={service2}
						alt='robot'
						width={630}
						height={750}
						loading='lazy'
						class='size-full object-cover'
					/>
				</div>

				<div
					class='absolute inset-0 flex flex-col justify-end bg-gradient-to-b from-ink-black/0 to-ink-black/90 p-8 lg:p-15'
				>
					<Typography component='h4' class='pb-4'
						>Photo editing</Typography
					>
					<Typography
						component='p2'
						class='pb-12 text-amethyst-purple'
					>
						Automatically enhance your photos using our AI
						app&apos;s photo editing feature. Try it now!
					</Typography>
				</div>
			</div>

			<div
				class='overflow-hidden rounded-3xl bg-night-black p-4 lg:min-h-[46rem]'
			>
				<div class='px-4 py-12 xl:px-8'>
					<Typography component='h4' class='h4 pb-4'
						>Video generation</Typography
					>
					<Typography
						component='p2'
						class='body-2 pb-8 text-amethyst-purple'
					>
						The world's most powerful AI photo and video art
						generation engine. What will you create?
					</Typography>

					<ul class='flex items-center justify-between'>
						{
							SERVICE_ICON_NAMES.map((item, i) => (
								<li
									class:list={[
										'flex items-center justify-center rounded-2xl',
										i === 2
											? 'size-12 bg-conic-gradient p-px md:size-16'
											: 'flex size-10 bg-deep-indigo md:size-15',
									]}
								>
									<div
										class:list={[
											{
												'flex h-full w-full items-center justify-center rounded-2xl bg-night-black':
													i === 2,
											},
										]}
									>
										<Icon
											name={item}
											width={24}
											height={24}
										/>
									</div>
								</li>
							))
						}
					</ul>
				</div>

				<div
					class='relative h-80 overflow-hidden rounded-xl bg-ink-black md:h-[25rem]'
				>
					<Image
						src={service3}
						alt='Scary robot'
						width={520}
						height={400}
						loading='lazy'
						class='h-full w-full object-cover'
					/>

					<div
						class='absolute bottom-0 left-0 flex w-full items-center gap-x-3 p-6'
					>
						<Icon
							name='play'
							width={24}
							height={24}
							class='object-contain'
						/>

						<div class='grow bg-[#D9D9D9]'>
							<div class='h-0.5 w-1/2 bg-lavender-purple'></div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div
			class='absolute -left-[10rem] top-0 -z-10 h-[56.625rem] w-[56.625rem] opacity-50 mix-blend-color-dodge'
		>
			<Image
				src={gradient}
				alt='Gradient'
				loading='lazy'
				width={1417}
				height={1417}
				class='absolute left-1/2 top-1/2 h-[88.5625rem] w-[79.5625rem] max-w-[79.5625rem] -translate-x-1/2 -translate-y-1/2'
			/>
		</div>
	</div>
</Section>
