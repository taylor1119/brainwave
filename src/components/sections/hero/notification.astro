---
import { Image } from 'astro:assets'
import notification1 from '~/assets/imgs/notification-1.png'
import notification2 from '~/assets/imgs/notification-2.png'
import notification3 from '~/assets/imgs/notification-3.png'
import notification4 from '~/assets/imgs/notification-4.png'
import Typography from '~/components/primitive/typography.astro'

const notificationImages = [notification2, notification3, notification4]
---

<div
	class='absolute -right-24 bottom-48 hidden w-72 items-center gap-5 rounded-2xl border border-white/10 bg-shadow-gray/40 p-4 pr-6 backdrop-blur xl:flex'
>
	<Image
		src={notification1}
		width={62}
		height={62}
		loading='eager'
		alt='Notification'
		class='rounded-xl'
	/>

	<div class='flex-1'>
		<Typography component='h6' class='pb-1 text-base'
			>Code generation</Typography
		>

		<div class='flex items-center justify-between'>
			<ul class='flex gap-x-2'>
				{
					notificationImages.map((item) => (
						<li>
							<Image
								src={item}
								width={24}
								height={24}
								loading='eager'
								alt='Notification'
								class='w-full rounded-full'
							/>
						</li>
					))
				}
			</ul>
			<Typography component='p2' class='text-steel-gray'
				>1m ago</Typography
			>
		</div>
	</div>
</div>
